<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.quanlykho.controller.NhapThuocController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="QUẢN LÝ NHẬP KHO" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <HBox spacing="20">
        <VBox spacing="10" prefWidth="300" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-color: #dee2e6;">
            <Label text="Thông tin thuốc mới" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtTenThuoc" promptText="Tên thuốc"/>
            <TextField fx:id="txtSoLuong" promptText="Số lượng nhập"/>
            <TextField fx:id="txtGiaNhap" promptText="Giá nhập (VNĐ)"/>
            <TextField fx:id="txtHanSuDung" promptText="Hạn sử dụng (dd/mm/yyyy)"/>
            <Button text="Lưu thông tin" onAction="#handleSave" maxWidth="Infinity"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Hoàn thành nhập kho" onAction="#handleFinishImport" maxWidth="Infinity"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>

        <VBox HBox.hgrow="ALWAYS" spacing="10">
            <Label text="Danh sách thuốc vừa nhập trong lô này" style="-fx-font-weight: bold;"/>
            <TableView fx:id="tablePhieuNhap" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="Tên thuốc" prefWidth="150"/>
                    <TableColumn text="SL" prefWidth="50"/>
                    <TableColumn text="Giá" prefWidth="100"/>
                    <TableColumn text="HSD" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>
</VBox>