<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox spacing="20" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.quanlykho.controller.BanThuocController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox spacing="10" prefWidth="350">
        <Label text="HÓA ĐƠN BÁN HÀNG" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Separator/>
        
        <Label text="TÌM KIẾM THUỐC" style="-fx-font-weight: bold;"/>
        <Label text="Tên thuốc:"/>
        <TextField fx:id="txtTenThuoc" promptText="Tìm theo tên..."/>
        
        <Label text="Hãng cung cấp:"/>
        <ComboBox fx:id="cbHaCungCap" promptText="Chọn hãng..." maxWidth="Infinity"/>
        
        <Label text="Khoảng giá:"/>
        <HBox spacing="5">
            <TextField fx:id="txtGiaMin" promptText="Giá từ" prefWidth="80"/>
            <Label text="-"/>
            <TextField fx:id="txtGiaMax" promptText="Giá đến" prefWidth="80"/>
        </HBox>
        
        <Label text="Sắp xếp giá:"/>
        <ComboBox fx:id="cbSapXepGia" maxWidth="Infinity">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Không sắp xếp"/>
                    <String fx:value="Thấp đến cao"/>
                    <String fx:value="Cao đến thấp"/>
                </FXCollections>
            </items>
        </ComboBox>
        
        <Label text="Hạn sử dụng:"/>
        <HBox spacing="5">
            <Label text="Từ:"/>
            <DatePicker fx:id="dpHanSuDungFrom" prefWidth="100"/>
            <Label text="Đến:"/>
            <DatePicker fx:id="dpHanSuDungTo" prefWidth="100"/>
        </HBox>
        
        <Button fx:id="btnTimKiem" text="Tìm kiếm" maxWidth="Infinity" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button fx:id="btnResetTimKiem" text="Đặt lại" maxWidth="Infinity" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        
        <Separator/>
        <Label text="CHỌN THUỐC" style="-fx-font-weight: bold;"/>
        <Label text="Tìm thuốc:"/>
        <ComboBox fx:id="cbThuoc" promptText="Chọn thuốc từ kho..." maxWidth="Infinity"/>
        <Label text="Số lượng bán:"/>
        <TextField fx:id="txtSoLuongBan" />
        <Button fx:id="btnThemVaoHoaDon" text="Thêm vào hóa đơn" maxWidth="Infinity" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
    </VBox>

    <VBox spacing="10" HBox.hgrow="ALWAYS">
        <TableView fx:id="tableGioHang" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTenThuoc" text="Tên thuốc" prefWidth="200"/>
                <TableColumn fx:id="colSL" text="SL" prefWidth="70"/>
                <TableColumn fx:id="colGia" text="Giá" prefWidth="100"/>
                <TableColumn fx:id="colThanhTien" text="Thành tiền" prefWidth="130"/>
            </columns>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="20">
            <Label text="TỔNG CỘNG:" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: red;"/>
            <Label fx:id="lblTongTien" text="0 VNĐ" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Button fx:id="btnThanhToan" text="THANH TOÁN" prefHeight="40" prefWidth="150" 
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</HBox>