<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.quanlykho.controller.MainController">

    <!-- ===== TOP ===== -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="HỆ THỐNG QUẢN LÝ KHO THUỐC"
                   style="-fx-text-fill: white;
                          -fx-font-size: 18px;
                          -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- ===== MENU LEFT ===== -->
    <left>
        <VBox spacing="10" prefWidth="200"
              style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Nhập thuốc" maxWidth="Infinity"
                    onAction="#showImportView"/>
            <Button text="Xuất thuốc" maxWidth="Infinity"
                    onAction="#showExportView"/>
            <Button text="Tồn kho" maxWidth="Infinity"
                    onAction="#showInventoryView"/>
            <Button text="Thống kê" maxWidth="Infinity"
                    onAction="#showStatisticsView"/>
            <Button text="Đăng xuất"
        onAction="#handleLogout"
        style="-fx-background-color: #e74c3c; -fx-text-fill: white"/>

            <Separator/>

            <Button text="Thoát" maxWidth="Infinity"
                    onAction="#exitApp"/>
        </VBox>
    </left>

    <!-- ===== CENTER ===== -->
    <center>
        <StackPane fx:id="contentPane">
            <Label text="Vui lòng chọn chức năng bên trái"
                   style="-fx-font-size: 16px; -fx-text-fill: gray;" />
        </StackPane>
    </center>

</BorderPane>
