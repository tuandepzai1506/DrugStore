<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.quanlykho.controller.StatisticsController">
    <content>
        <VBox fx:id="containerStatistics" spacing="20" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- HEADER -->
            <VBox spacing="10" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #ffffff;">
                <Label text="THỐNG KÊ KHO HÀNG" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="lblTodayDate" text="Ngày: " style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Làm mới" onAction="#refreshStatistics" 
                            style="-fx-padding: 8 15; -fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>

            <!-- === HÔM NAY === -->
            <VBox spacing="10">
                <Label text="HÔM NAY" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                
                <HBox spacing="15" style="-fx-padding: 15;">
                    <!-- Hàng bán -->
                    <VBox spacing="8" style="-fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #ebf5fb; -fx-border-width: 2; -fx-min-width: 200;">
                        <Label text="Hàng đã bán" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
                        <Label fx:id="lblTodaysSalesQty" text="0 cái" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                        <Label text="Số lượng bán ra" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>

                    <!-- Doanh thu -->
                    <VBox spacing="8" style="-fx-border-color: #27ae60; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #eafaf1; -fx-min-width: 200;">
                        <Label text="Doanh thu" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1e8449;"/>
                        <Label fx:id="lblTodaysRevenue" text="0 VND" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                        <Label text="Giá trị bán hôm nay" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>

                    <!-- Hàng nhập -->
                    <VBox spacing="8" style="-fx-border-color: #f39c12; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #fef5e7; -fx-min-width: 200;">
                        <Label text="Hàng nhập" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #d68910;"/>
                        <Label fx:id="lblTodaysImportQty" text="0 cái" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                        <Label text="Số lượng nhập" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>

                    <!-- Giá trị nhập -->
                    <VBox spacing="8" style="-fx-border-color: #8e44ad; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #f4ecf7; -fx-min-width: 200;">
                        <Label text="Giá trị nhập" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #6c3483;"/>
                        <Label fx:id="lblTodaysImportValue" text="0 VND" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #8e44ad;"/>
                        <Label text="Giá trị hàng nhập" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- === TỒNG KHO === -->
            <VBox spacing="10">
                <Label text="TỔNG KHO" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                
                <HBox spacing="15" style="-fx-padding: 15;">
                    <!-- Loại hàng -->
                    <VBox spacing="8" style="-fx-border-color: #34495e; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #ecf0f1; -fx-min-width: 200;">
                        <Label text="Loại hàng" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label fx:id="lblTotalMedicineTypes" text="0 loại" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                        <Label text="Tổng số loại thuốc" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>

                    <!-- Số lượng tồn -->
                    <VBox spacing="8" style="-fx-border-color: #16a085; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #d5f4e6; -fx-min-width: 200;">
                        <Label text="Số lượng tồn" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #0d5340;"/>
                        <Label fx:id="lblTotalStockQty" text="0 cái" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #16a085;"/>
                        <Label text="Tổng hàng trong kho" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>

                    <!-- Giá trị tồn -->
                    <VBox spacing="8" style="-fx-border-color: #c0392b; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #fadbd8; -fx-min-width: 200;">
                        <Label text="Giá trị tồn" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #922b21;"/>
                        <Label fx:id="lblTotalStockValue" text="0 VND" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #c0392b;"/>
                        <Label text="Tổng giá trị kho" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- === CẢNH BÁO === -->
            <VBox spacing="10">
                <Label text="CẢNH BÁO" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                
                <HBox spacing="15" style="-fx-padding: 15;">
                    <!-- Sắp hết -->
                    <VBox spacing="8" style="-fx-border-color: #f39c12; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #fef5e7; -fx-min-width: 200;">
                        <Label text="Sắp hết" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #d68910;"/>
                        <Label fx:id="lblLowStockCount" text="0 loại" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                        <Label text="Hàng tồn &lt; 10 cái" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>

                    <!-- Hết hàng -->
                    <VBox spacing="8" style="-fx-border-color: #e74c3c; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #fadbd8; -fx-min-width: 200;">
                        <Label text="Hết hàng" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #922b21;"/>
                        <Label fx:id="lblOutOfStockCount" text="0 loại" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                        <Label text="Hàng tồn = 0 cái" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>
                </HBox>
            </VBox>

        </VBox>
    </content>
</ScrollPane>
